" ==========================
" GENERAL SETTINGS
" ==========================

let mapleader = "\<Space>"

filetype plugin indent on
syntax enable

colorscheme NeoSolarized 
set background=dark
set termguicolors

set number relativenumber

set splitright
set splitbelow

set hidden
set nobackup
set nowritebackup

set cmdheight=2
set noshowmode
set updatetime=300
set shortmess+=c
set signcolumn=yes
set scrolloff=2
set autoindent
set nowrap
set nojoinspaces
set showtabline=2

set shiftwidth=4
